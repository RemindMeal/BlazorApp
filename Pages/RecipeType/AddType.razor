@inherits AddComponent<RecipeType>

<EditForm Model="@Model" OnValidSubmit="@FormSubmitted">

    <DataAnnotationsValidator />

    <div class="form-group">
        <label for="nom" class="control-label">Nom</label><br />
        <InputText id="nom" @bind-Value="Model.Name" class="form-control" />
        <ValidationMessage For="@(() => Model.Name)" />
    </div>
    <div class="button-group">
        <button type="submit" class="btn btn-primary">Ajouter</button>
        <button @onclick="BlazoredModal.CancelAsync" class="btn btn-secondary">Annuler</button>
    </div>
</EditForm>
